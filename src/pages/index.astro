---
import avatarImage from '../assets/avatar.png'
import goImage from '../assets/technologies/go.png';
import nodeImage from '../assets/technologies/node.png';
import phpImage from '../assets/technologies/php.png';
import reactImage from '../assets/technologies/react.png';
import vueImage from '../assets/technologies/vue.png';
import typescriptImage from '../assets/technologies/typescript.png';
import htmlImage from '../assets/technologies/html.png';
import cssImage from '../assets/technologies/css.png';
import tailwindImage from '../assets/technologies/tailwind.png';
import mysqlImage from '../assets/technologies/mysql.png';
import redisImage from '../assets/technologies/redis.png';
import dockerImage from '../assets/technologies/docker.png';
import intellijImage from '../assets/technologies/intellij.png';
import gitImage from '../assets/technologies/git.png';
import githubImage from '../assets/technologies/github.png';

import Base from '../layouts/Base.astro';
import Item from '../components/navbar/Item.astro';
import Technology from '../components/misc/Technology.astro';
import {DISCORD, EMAIL, FAVOURITE_BAND, GITHUB, JOB, LINKEDIN} from '../consts';

const today = new Date();
const currentMonth = today.getMonth() + 1;
const [year, month, day] = [2003, 5, 6];
let age = today.getFullYear() - year;
if (currentMonth < month || (currentMonth === month && today.getDate() < day)) {
    age--;
}
---

<Base title="Home"
      description="Take a look at my corner of the internet! Learn more about me and what I do or get in touch!"
      image={avatarImage}>

<div slot="sidebar-head" class="flex flex-col justify-center items-center text-center">
    <h1 class="text-2xl font-bold mb-3">Gergely Kun (Geri)</h1>
    <h3 class="text-sm accent mb-5">Developer & Linux SysAdmin</h3>
    <div class="flex flex-row gap-5">
        <Item class="fa-brands fa-github" href={GITHUB}/>
        <Item class="fa-brands fa-linkedin" href={LINKEDIN}/>
        <Item class="fa-brands fa-discord" href={DISCORD.INVITE}/>
        <Item class="fa-solid fa-envelope" href={`mailto:${EMAIL}`}/>
    </div>
    <span class="text-clamp bg-white text-white">Please help me decide what to put here</span>
</div>

<div slot="sidebar-foot">
    <div class="flex flex-row justify-around mb-5">
        <a href="/cv" class="text-sm">
            <i class="fa-solid fa-download"></i>
            Download CV
        </a>
        <a href={GITHUB} class="text-sm">
            <i class="fa-solid fa-list-check"></i>
            View Projects
        </a>
    </div>
</div>

<div slot="main">
    <div>
        <h1 class="text-2xl font-bold">âœ¨ About Me</h1>
        <p class="mb-1">
            I'm a self-taught {age} year old Hungarian software developer
            and Linux system administrator.
        </p>
        <p class="mb-1">
            I currently work as a <span class="font-bold">{JOB.ROLE}</span>
            at <a href={JOB.COMPANY.LINK} class="font-bold company-name">{JOB.COMPANY.NAME}</a>.
        </p>
        <p class="mb-1">
            In my free time I listen to metal bands such as
            <a href={FAVOURITE_BAND.LINK} class="font-bold band-name">{FAVOURITE_BAND.NAME}</a>
            and create side projects alone and with friends!
        </p>
        <p>Looking for freelancing work!</p>
    </div>

    <div class="flex flex-col justify-center">
        <h1 class="text-2xl font-bold">Technologies</h1>
        <p>Here is my current stack for various web development and other side projects:</p>
        <div class="mt-5 mb-10 grid grid-cols-5 gap-x-5 gap-y-5">
            <Technology display="GoLang" image={goImage}/>
            <Technology display="Node.js" image={nodeImage}/>
            <Technology display="PHP" image={phpImage}/>
            <Technology display="React.js" image={reactImage}/>
            <Technology display="Vue.js" image={vueImage}/>
            <Technology display="TypeScript" image={typescriptImage}/>
            <Technology display="HTML" image={htmlImage}/>
            <Technology display="CSS" image={cssImage}/>
            <Technology display="Tailwind" image={tailwindImage}/>
            <Technology display="MySQL" image={mysqlImage}/>
            <Technology display="redis" image={redisImage}/>
            <Technology display="Docker" image={dockerImage}/>
            <Technology display="IntelliJ" image={intellijImage}/>
            <Technology display="Git" image={gitImage}/>
            <Technology display="GitHub" image={githubImage}/>
        </div>
        <a href={GITHUB} class="text-center">
            <i class="fa-solid fa-up-right-from-square"></i>
            All technologies & projects
        </a>
    </div>
</div>

</Base>
