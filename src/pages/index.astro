---
import BaseHead from '../components/BaseHead.astro';
import Navbar from '../components/navbar/Navbar.astro';
import Technology from '../components/technologies/Technology.astro';
import {SITE_TITLE, SITE_DESCRIPTION, JOB, FAVOURITE_BAND} from '../consts';

const today = new Date();
const currentMonth = today.getMonth() + 1;
const currentYear = today.getFullYear();
const [year, month, day] = [2003, 5, 6];
let age = today.getFullYear() - year;
if (currentMonth < month || (currentMonth === month && today.getDate() < day)) {
    age--;
}
---

<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body>
<main class="flex flex-col large:justify-center items-center h-full">
    <div class="flex large:flex-row small:flex-col h-196">
        <Navbar title={SITE_TITLE}/>

        <div class="flex large:flex-row small:flex-col items-center large:w-full small:gap-5 large:gap-0">
            <div class="large:ml-5 small:mt-5 large:mt-0 flex flex-col justify-between background rounded-lg flex-shrink-0 large:h-full large:w-auto small:w-full shadow-lg shadow-black z-10">
                <div class="flex flex-col items-center rounded-lg mb-5">
                    <img class="max-w-xs w-max rounded-lg" src="/avatar.png" alt="Geri's avatar"/>
                    <h1 class="text-2xl font-bold">Gergely Kun (Geri)</h1>
                    <h3 class="text-sm accent">Developer & Linux SysAdmin</h3>
                </div>
                <div class="flex flex-col justify-center">
                    <div class="flex flex-row justify-around mb-5">
                        <a href="/cv" class="text-sm">
                            <i class="fa-solid fa-download"></i>
                            Download CV
                        </a>
                        <a href="/contact" class="text-sm">
                            <i class="fa-solid fa-handshake-simple"></i>
                            Contact Me
                        </a>
                    </div>
                    <span class="text-xs text-center mb-5">© geri.dev - {currentYear}</span>
                </div>
            </div>

            <div class="background flex flex-col gap-2 h-128 w-full p-5
                small:rounded-tl-lg large:rounded-tl-none small:rounded-bl-lg large:rounded-bl-none
                rounded-tr-lg rounded-br-lg shadow-lg shadow-black text-clamp">
                <div>
                    <h1 class="text-2xl font-bold">✨ About Me</h1>
                    <p class="mb-1">
                        I'm a self-taught {age} year old Hungarian software developer
                        and Linux system administrator.
                    </p>
                    <p class="mb-1">
                        I currently work as a <span class="font-bold">{JOB.ROLE}</span>
                        at <a href={JOB.COMPANY.LINK} class="font-bold company-name">{JOB.COMPANY.NAME}</a>.
                    </p>
                    <p class="mb-1">
                        In my free time I listen to metal bands such as
                        <a href={FAVOURITE_BAND.LINK} class="font-bold band-name">{FAVOURITE_BAND.NAME}</a>
                        and create side projects alone and with friends!
                    </p>
                    <p>Looking for freelancing work!</p>
                </div>

                <div class="flex flex-col justify-center">
                    <h1 class="text-2xl font-bold">Technologies</h1>
                    <p>Here is my current stack for various web development and other side projects:</p>
                    <div class="mt-5 mb-10 grid grid-cols-5 gap-x-5 gap-y-5">
                        <Technology displayName="GoLang" file="go"/>
                        <Technology displayName="Node.js" file="node"/>
                        <Technology displayName="PHP" file="php"/>
                        <Technology displayName="React.js" file="react"/>
                        <Technology displayName="Vue.js" file="vue"/>
                        <Technology displayName="TypeScript" file="typescript"/>
                        <Technology displayName="HTML" file="html"/>
                        <Technology displayName="CSS" file="css"/>
                        <Technology displayName="Tailwind" file="tailwind"/>
                        <Technology displayName="MySQL" file="mysql"/>
                        <Technology displayName="redis" file="redis"/>
                        <Technology displayName="Docker" file="docker"/>
                        <Technology displayName="IntelliJ" file="intellij"/>
                        <Technology displayName="Git" file="git"/>
                        <Technology displayName="GitHub" file="github"/>
                    </div>
                    <a href="/technologies" class="text-center">
                        <i class="fa-solid fa-up-right-from-square"></i>
                        All technologies & projects
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>
</body>
</html>
