---
import stormholdImage from '../../assets/servers/stormhold.png';
import Detail from '../../layouts/Detail.astro';
import {Image} from 'astro:assets';
const images = await Astro.glob('../../assets/servers/stormhold/*.png');
---

<Detail title="Archives - Stormhold"
        description="More information about my previous server, Stormhold"
        image={stormholdImage}>

    <div slot="left">
        <div class="w-72 flex flex-col items-center text-clamp">
            <h1 class="text-2xl font-bold mb-3">Stormhold</h1>
            <p class="mb-2">Stormhold was a mostly vanilla whitelisted survival multiplayer server.</p>
            <p class="mb-2">Feel free to download and use them however you see fit!</p>
            <p class="mb-2">Please make sure to incrementally update them from their original version to prevent any
                world
                corruption.</p>
            <p class="mb-2">Let me know if you have any questions or concerns!</p>
            <a class="button" href="/archives">
                <i class="fa-solid fa-arrow-up-from-bracket"></i>
                Back To Archives
            </a>
        </div>
    </div>

    <div slot="right" class="text-clamp">
        <h2 class="text-xl text-center">Images</h2>
        {images.map(image => {
            return <img src={image.default.src} height={image.default.height} width={image.default.width} loading="lazy"/>
        })}
    </div>

</Detail>
